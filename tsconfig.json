{
	"compilerOptions": {
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"target": "ESNext",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"checkJs": true
	},
	"include": ["./src/"],
	"exclude": ["./dist/", "./test/"]
}
